<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".materialbase.ElevationApplyActivity">

    <ImageView
        android:id="@+id/girlsImageTop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192"
        app:srcCompat="@drawable/girls_generation_all"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/girlsImageBottom"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="24dp"
        android:padding="4dp"
        android:background="@android:color/white"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girlsImageTop"
        app:layout_constraintVertical_bias="0.305"
        app:srcCompat="@drawable/girls_generation_all"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>