<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/basic_margin"
    android:padding="@dimen/basic_padding"
    tools:context=".activity.PublicMaskStatusActivity">

    <TextView
        android:id="@+id/beachName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="[ 해운대 해수욕장 ]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/beachName"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/congestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@android:color/white"
            android:text="@string/congestion"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/congestion"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:background="@android:color/holo_green_dark"
            android:text="@string/very_good"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
    />
</RelativeLayout>